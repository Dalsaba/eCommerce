{% extends 'base.html.twig' %}

{% block title %}
	{{'Historique' | trans}}
{% endblock %}

{% block body %}
<h1>{{'Historique' | trans}}</h1>

{% for panier in paniers %}

	{% set total = 0 %}
	{% for cp in panier.contenuPaniers %}
		{% set total = total + (cp.Produit.Prix * cp.Quantite) %}
	{% endfor %}

	<table class="table">
		<thead>
			<tr>
				<th>{{'NÂ°' | trans}}</th>
				<th>{{'Montant' | trans}}</th>
				<th>{{'Date' | trans}}</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>
					{{panier.id}}</td>
				<td>
					{{total}}</td>
				<td>
					{{panier.date | date('d/m/Y')}}</td>
				<td>
					<a href="{{path('app_panier_hist_detail', {'id' : panier.id})}}" class="btn btn-primary">{{'Voir' | trans}}</a>
				</td>
			</tr>
		</tbody>
	</tbody>
{% else %}
	<p>
		{{'Historiques.Vide' | trans}}</p>
</tbody></table>{% endfor %}{% endblock %}
